<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <PublishAot>true</PublishAot>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Age.Core\Age.Core.csproj" />
    <ProjectReference Include="..\Age.Platform\Age.Platform.csproj" />
    <ProjectReference Include="..\Age.Platform.Windows\Age.Platform.Windows.csproj" />
    <ProjectReference Include="..\Age.Vulkan\Age.Vulkan.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="./Models/*" CopyToOutputDirectory="PreserveNewest" />
    <None Include="./Shaders/*.spv" CopyToOutputDirectory="PreserveNewest" />
    <None Include="./Textures/*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SkiaSharp" Version="2.88.6" />
  </ItemGroup>
</Project>
