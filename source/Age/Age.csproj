<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <PublishAot>true</PublishAot>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IlcDisableReflection>true</IlcDisableReflection>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <EnablePreviewFeatures>true</EnablePreviewFeatures>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Age.Core\Age.Core.csproj" />
    <ProjectReference Include="..\Age.Platform.Windows\Age.Platform.Windows.csproj" />
    <ProjectReference Include="..\Age.Vulkan\Age.Vulkan.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="./Shaders/*.spv" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>
</Project>
